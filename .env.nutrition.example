# MCP服务器配置
LOCAL_MCP_SERVER_URL=http://localhost:4111
LOCAL_NUTRITION_SERVER_URL=http://localhost:4113

# MCP服务器端口
MCP_PORT=4111
NUTRITION_PORT=4113

# FatSecret API 配置 - 选择一种认证方式

# 方式1: OAuth2 Client Credentials (推荐用于生产环境)
FATSECRET_CLIENT_ID=your_fatsecret_client_id
FATSECRET_CLIENT_SECRET=your_fatsecret_client_secret

# 方式2: 直接使用Access Token (如果您已有长期token)
# FATSECRET_ACCESS_TOKEN=your_access_token

# 方式3: API Key认证 (如果使用API Key)
# FATSECRET_API_KEY=your_api_key
# FATSECRET_API_SECRET=your_api_secret  # 可选

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key

# Mastra配置
PORT=4112

# 代理配置（如果需要）
# PROXY_URL=http://your-proxy:8080